{% spaceless %}
{{ form_open({'url': route('forum.post.submit', [forum.path, topic.id, post.id])}) }}
    {{ form_hidden('user_name', post.user_name) }}

    {% for attachment in attachments %}
        {{ form_hidden('attachments[]', attachment.file) }}
    {% endfor %}

    {% if post.id == topic.first_post_id %}
        {{ form_hidden('subject', topic.subject) }}
        {{ form_hidden('custom_tags', tags|join(', ')) }}
    {% endif %}

    {% if can('sticky', forum) %}
        {{ form_hidden('is_sticky', 1, post.is_sticky) }}
    {% endif %}

    {% if isSubscribe %}
        {{ form_hidden('subscribe', true) }}
    {% endif %}

    {{ form_textarea('text', post.text, {'class': 'form-control', 'rows': 5}) }}

    <button type="submit" class="btn btn-xs btn-primary pull-right" title="Kliknij, aby wysłać (Ctrl+Enter)">Zapisz</button>
    <a class="btn btn-xs btn-default pull-right btn-reset" style="margin-right: 10px">Anuluj</a>
{{ form_close() }}
{% endspaceless %}