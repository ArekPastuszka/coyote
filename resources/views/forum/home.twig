{% extends 'layout.twig' %}
{% block title %}Forum dyskusyjne{{ parent() }}{% endblock %}

{% import 'components/forms.twig' as forms %}

{% block container %}
    <div id="index" class="sidebar">
        <ul class="nav nav-tabs">
            <li role="presentation" class="active"><a href="#">Kategorie</a></li>
            <li role="presentation"><a href="#">Wszystkie</a></li>
            <li role="presentation"><a href="#">Bez odpowiedzi</a></li>
        </ul>

        {% include "forum/_top.twig" %}

        <main id="mainbar">
            {% for name, forums in sections %}
                <section class="panel panel-wrapper">
                    <div class="panel-body">
                        <h2 class="pull-left">{{ name }}</h2>

                        <a class="pull-right toggle in" data-toggle="collapse" href="#{{ name }}" aria-expanded="true">
                            <i class="fa fa-minus-square-o"></i>
                            <i class="fa fa-plus-square-o"></i>
                        </a>

                        <div class="clearfix"></div>

                        <div class="box-forum collapse in" id="{{ name }}">
                            <table>
                                <tbody>
                                    {% for forum in forums %}
                                        <tr id="forum-{{ forum.id }}">
                                            <td class="col-icon">
                                                <a href="#" title="Kliknij, aby odnzaczyć jako przeczytane">
                                                    <img class="img-responsive center-block" src="/img/forum-new.png">
                                                </a>
                                            </td>
                                            <td class="col-forum-description">
                                                <h3><a title="{{ forum.name }}" data-category="Forum-Name" href="{{ route('forum.category', [forum.path]) }}">{{ forum.name }}</a></h3>

                                                <p>{{ forum.description }}</p>

                                                {% if forum.subs %}
                                                    <ul class="list-unstyled">
                                                        {% for sub in forum.subs %}
                                                            <li>
                                                                <a href="{{ route('forum.category', [forum.path]) }}">{{ sub.name }}</a>
                                                            </li>
                                                        {% endfor %}
                                                    </ul>
                                                {% endif %}
                                            </td>
                                            <td class="col-stats hidden-md hidden-sm hidden-xs">
                                                <p title="Ilość wątków"><strong>{{ forum.topics|number_format(0, ',', ' ') }}</strong> <small>wątków</small></p>
                                                <p title="Ilość postów"><strong>{{ forum.posts|number_format(0, ',', ' ') }}</strong> <small>postów</small></p>
                                            </td>
                                            <td class="col-avatar hidden-md hidden-sm hidden-xs">
                                                <a href="http://4programmers.net/Profile/70446">
                                                    <img class="img-thumbnail" src="http://4programmers.net/template/img/avatar.png">
                                                </a>
                                            </td>
                                            <td class="col-post-preview hidden-sm hidden-xs">
                                                <p>
                                                    <a rel="nofollow" title="Przejdź do pierwszego nieczytanego postu" class="topic-last" href="#?view=unread"></a>

                                                    <a title="Porównywanie czy pliki sa takie same" href="#?p=1177861#id1177861">Porównywanie czy pliki sa takie same</a>
                                                </p>
                                                <p>
                                                    <span class="timestamp" data-timestamp="1442897046" title="22 wrzesień 2015, 06:44">22 wrzesień 2015, 06:44,</span>
                                                    <a data-user-id="70446" href="http://4programmers.net/Profile/70446">Mr.YaHooo</a>
                                                </p>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </section>
            {% endfor %}

            <section class="panel panel-wrapper">
                <div class="panel-body">
                    <h2 class="pull-left">Rozwój zawodowy</h2>
                    <a class="pull-right toggle"><i class="fa fa-minus-square-o"></i></a>

                    <div class="clearfix"></div>

                    <div class="box-forum">
                        <table>
                            <tbody>
                                <tr id="forum-6">
                                    <td class="col-icon">
                                        <a href="#" title="Kliknij, aby odnzaczyć jako przeczytane">
                                            <img class="img-responsive center-block" src="/img/forum-new.png">
                                        </a>
                                    </td>
                                    <td class="col-forum-description">
                                        <h3><a title="Algorytmy i struktury danych" data-category="Forum-Name" href="http://forum.4programmers.net/Algorytmy">Oferty pracy</a></h3>

                                        <p>Poszukujesz pracownika? W tym miejscu możesz umieścić ogłoszenie o pracę</p>
                                    </td>
                                    <td class="col-stats hidden-md hidden-sm hidden-xs">

                                    </td>
                                    <td class="col-avatar hidden-md hidden-sm hidden-xs">

                                    </td>
                                    <td class="col-post-preview hidden-sm hidden-xs text-center">
                                        Ilość przekierowań: 54414
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>

            {{ viewers|raw }}
        </main>

        <aside id="sidebar">
            <div class="box">
                <ul class="side-menu">
                    <li class="btn-mark-read">
                        <a title="Oznacz kategorie jako przeczytane" data-category="forum-sidebar-buttons">Oznacz jako przeczytane</a>
                    </li>
                    <li class="btn-atom">
                        <a href="http://forum.4programmers.net?export=atom" title="Wyświetl najnowsze wątki w formacie atom" data-category="forum-sidebar-buttons" data-value="atom">Pobierz w formacie Atom</a>
                    </li>
                    <li id="btn-setting">
                        <a title="Zmień kolejność wyświetlanych kategorii" href="http://4programmers.net/User/Order" data-category="forum-sidebar-buttons" data-value="setting">Personalizacja forum</a>
                    </li>
                </ul>
            </div>

            {% include "forum/_sidebar.twig" %}
        </aside>
    </div>
{% endblock %}

{% block head %}
    {{ parent() }}

    <link rel="stylesheet" href="/css/forum.css">
{% endblock %}

{% block body %}
    {{ parent() }}

    <script src="/js/forum.js" type="text/javascript"></script>
{% endblock %}