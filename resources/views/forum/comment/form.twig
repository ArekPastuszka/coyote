<form method="post" action="{{ route('forum.comment.save', [comment.id]) }}" {{ comment.id is not defined ? ('class="collapse" id="form-' ~ post.id ~ '"')|raw }}>
    <input type="hidden" value="{{ post.id }}" name="post_id">
    <textarea cols="90" rows="2" class="form-control" name="text" maxlength="580" data-prompt-url="{{ route('forum.prompt', [topic.id]) }}">{{ comment.text }}</textarea>

    <p class="text-muted pull-left">Pozostało <strong>{{ 580 - comment.text|length }}</strong> znaków</p>

    <button type="submit" class="btn btn-xs btn-primary pull-right" title="Kliknij, aby wysłać (Ctrl+Enter)">Zapisz komentarz</button>

    {% if comment.id is defined %}
        <button class="btn btn-xs btn-danger pull-right btn-reset" style="margin-right: 10px">Anuluj</button>
    {% endif %}
</form>