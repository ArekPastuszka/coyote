<section class="panel panel-wrapper">
    <div class="panel-body">
        <h2 class="pull-left">{{ name }}</h2>

        <a class="pull-right toggle in" data-toggle="collapse" href="#{{ name }}" aria-expanded="true">
            <i class="fa fa-minus-square-o"></i>
            <i class="fa fa-plus-square-o"></i>
        </a>

        <div class="clearfix"></div>

        <div class="box-forum collapse in" id="{{ name }}">
            <table>
                <tbody>
                {% for forum in forums %}
                    <tr id="forum-{{ forum.id }}">
                        <td class="col-icon hidden-xxs">
                            {% if forum.is_locked %}
                                <span class="ico lock {{ forum.forum_unread ? 'new' }}" title="Forum zablokowane">
                                    <i class="fa fa-fw fa-lock"></i>
                                </span>
                            {% elseif forum.forum_unread %}
                                <span class="ico new" title="Kliknij, aby oznaczyć jako przeczytane">
                                    <i class="fa fa-fw fa-file-o"></i>
                                </span>
                            {% else %}
                                <span class="ico normal" title="Brak nowych postów">
                                    <i class="fa fa-fw fa-file-o"></i>
                                </span>
                            {% endif %}
                        </td>
                        <td class="col-forum-description">
                            <h3><a title="{{ forum.name }}" data-category="Forum-Name" href="{{ route('forum.category', [forum.path]) }}">{{ forum.name }}</a></h3>

                            <p>{{ forum.description }}</p>

                            {% if forum.subs %}
                                <ul class="list-unstyled">
                                    {% for sub in forum.subs %}
                                        <li {{ sub.forum_unread ? 'class="sub-unread"' }}>
                                            <a href="{{ route('forum.category', [sub.path]) }}">{{ sub.name }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        </td>
                        <td class="col-stats hidden-md hidden-sm hidden-xs">
                            {% if not forum.url %}
                                <p title="Ilość wątków"><strong>{{ forum.topics|number_format(0, ',', ' ') }}</strong> <small>wątków</small></p>
                                <p title="Ilość postów"><strong>{{ forum.posts|number_format(0, ',', ' ') }}</strong> <small>postów</small></p>
                            {% endif %}
                        </td>
                        <td class="col-avatar hidden-md hidden-sm hidden-xs">
                            {% if not forum.url %}
                                {% if forum.last_post_id %}
                                    {% if forum.user_id %}
                                        <a href="{{ route('profile', [forum.user_id]) }}">
                                            <img class="img-thumbnail" src="{{ user_photo(forum.photo) }}">
                                        </a>
                                    {% else %}
                                        <img class="img-thumbnail" src="{{ asset('img/avatar.png') }}">
                                    {% endif %}
                                {% endif %}
                            {% endif %}
                        </td>
                        <td class="col-post-preview hidden-sm hidden-xs">
                            {% if forum.url %}
                                <p class="text-center">Ilość przekierowań: {{ forum.topics }}</p>
                            {% else %}
                                {% if forum.last_post_id %}
                                    <p>
                                        <a rel="nofollow" title="Przejdź do pierwszego nieczytanego postu" class="btn-view unread" href="{{ forum.route }}?view=unread"></a>

                                        <a title="{{ forum.subject }}" href="{{ forum.route }}?p={{ forum.last_post_id }}#id{{ forum.last_post_id }}">{{ forum.subject }}</a>
                                    </p>
                                    <p>
                                        <span class="timestamp" data-timestamp="{{ forum.created_at|timestamp }}" title="{{ forum.created_at|format_date(false) }}">{{ forum.created_at|format_date }},</span>
                                        {% if forum.user_id %}
                                            {{ link_to_profile(forum.user_id, forum.user_name, forum.is_active, forum.is_blocked) }}
                                        {% else %}
                                            {{ forum.anonymous_name }}
                                        {% endif %}
                                    </p>
                                {% else %}
                                    <p class="text-center">--</p>
                                {% endif %}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</section>