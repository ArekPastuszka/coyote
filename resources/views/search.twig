{% extends 'layout' %}

{% block title %}Szukaj{{ parent() }}{% endblock %}

{% block container %}
    <div class="row">
        <div id="box-search" class="col-md-7 col-sm-12 col-xs-12">
            {{ form_open({method: 'GET', role: 'form', url: route('search'), class: 'form-inline outline', id: 'box-search'}) }}

            <div class="form-group input-keywords col-sm-5 col-xs-5">
                <div class="col-content">
                    {{ form_text('q', input_get('q'), {'class': 'form-control', 'placeholder': 'Słowa kluczowe'}) }}
                </div>
            </div>

            <div class="form-group col-sm-2 col-xs-2">
                <button class="btn btn-primary btn-search" type="submit">
                    <i class="fa fa-search"></i> <span class="hidden-xxs">Szukaj</span>
                </button>
            </div>
            {{ form_close() }}
        </div>
    </div>

    <div class="row">
        <ul class="nav nav-tabs">
            {% for item in tabs.roots() %}
                <li {{ forms.attr(item.attr) }}>
                    <a href="{{ item.url }}">{{ item.title|raw }}</a>
                </li>
            {% endfor %}
        </ul>

        <div class="well well-sm empty-result">
            <p>
                Nie znaleźliśmy postów, które spełniają Twoje kryteria.<br>
                <a href="{{ route('forum.home') }}">Zobacz wszystkie posty</a>, a być może znajdziesz pasującą dla Ciebie!
            </p>
        </div>
    </div>
{% endblock %}

{% block head %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ cdn('css/search.css') }}">
{% endblock %}