{% extends 'adm.base' %}
{% block title %}Strona główna {{ parent() }}{% endblock %}

{% block container %}
    <div class="panel panel-default">
        <div class="panel-heading">Status systemu</div>
        <div class="panel-body">
            <ul class="list-group">
                {% for label, checked in checklist %}
                    <li class="list-group-item">
                        {% if checked %}
                            <i class="fas fa-check text-success fa-fw"></i>
                        {% else %}
                            <i class="fas fa-times text-danger fa-fw"></i>
                        {% endif %}

                        <span>{{ label|raw }}</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
