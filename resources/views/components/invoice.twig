<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>

    <title>Invoice</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        @import url("//fonts.googleapis.com/css?family=Open+Sans:400,300&subset=latin,latin-ext");

        body {
            font-family: "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif;
            background: #fff;
            background-image: none;
            font-size: 12px;
        }

        .left {
            text-align: left;
        }

        .right {
            text-align: right;
        }

        .container {
            padding-top:30px;
        }

        .invoice-head td {
            padding: 0 8px;
        }

        .table th {
            vertical-align: bottom;
            font-weight: bold;
            padding: 8px;
            line-height: 20px;
            border: 1px solid #dddddd;
            background-color: #f8f8f8;
        }

        .table td {
            padding: 8px;
            line-height: 20px;
            vertical-align: top;
            border: 1px solid #dddddd;
        }

        .table td.empty-cell {
            border-left: none;
            border-right: none;
            border-bottom: none;
        }

        img {
            width: 150px;
        }
    </style>
</head>

<body>
<div class="container">
    <table style="margin-left: auto; margin-right: auto" width="550">
        <tr>
            <td style="border-bottom: 1px solid #ddd; padding-bottom: 30px; margin-bottom: 30px">
                <br><br><h3>Faktura nr.: {{ invoice.number }}</h3><br>

                Data wystawienia: {{ invoice.created_at|date('Y-m-d') }}<br>
                Data sprzedaży: {{ invoice.created_at|date('Y-m-d') }}
            </td>
            <td class="border-bottom: 1px solid #ddd; padding-bottom: 30px; margin-bottom: 30px">
                <img src="{{ url('img/logo-about.png') }}">
            </td>
        </tr>
        <tr>
            <td class="left" style="padding-top: 30px; padding-bottom: 30px">
                <h3>Sprzedawca</h3><br>

                <strong>{{ vendor.name }}</strong><br>
                {{ vendor.address }}<br>
                {{ vendor.postal_code }} {{ vendor.city }}<br>
                NIP: {{ vendor.vat_id }}
            </td>

            <!-- Organization Name / Image -->
            <td class="left" style="padding-top: 30px; padding-bottom: 30px">
                <h3>Nabywca</h3><br>

                <strong>{{ invoice.name }}</strong><br>
                {{ invoice.address }}<br>
                {{ invoice.postal_code }} {{ invoice.city }}<br>
                NIP: {{ invoice.vat_id }}
            </td>
        </tr>
        <tr valign="top" style="margin-top: 40px">
            <td colspan="2">
                <!-- Invoice Table -->
                <table width="100%" class="table" border="0" cellpadding="0" cellspacing="0">
                    <tr>
                        <th class="left">Opis</th>
                        <th class="right">Ilość</th>
                        <th class="right">Cena netto</th>
                        <th class="right">Wartość netto</th>
                        <th class="right">VAT%</th>
                        <th class="right">Wartość VAT</th>
                        <th class="right">Wartość brutto</th>
                    </tr>

                    <!-- Display The Invoice Items -->
                    {% for item in invoice.items %}
                        <tr>
                            <td class="left">{{ item.description }}</td>
                            <td class="right">1</td>
                            <td class="right">{{ item.price }} {{ currency }}</td>
                            <td class="right">{{ item.price }} {{ currency }}</td>
                            <td class="right">{{ (item.vat_rate * 100) - 100 }}</td>
                            <td class="right">{{ item.gross_price - item.price }} {{ currency }}</td>
                            <td class="right">{{ item.gross_price }} {{ currency }}</td>
                        </tr>
                    {% endfor %}

                    <!-- Display The Final Total -->
                    <tr style="border-top:2px solid #000;">
                        <td class="empty-cell">&nbsp;</td>
                        <td class="empty-cell">&nbsp;</td>
                        <td class="right"><strong>Razem</strong></td>
                        <td class="right">&nbsp;{{ invoice.net_price }} {{ currency }}</td>
                        <td class="right">&nbsp;</td>
                        <td class="right">{{ invoice.gross_price - invoice.net_price }} {{ currency }}</td>
                        <td class="right"><strong>{{ invoice.gross_price }} {{ currency }}</strong></td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td colspan="2" style="padding-top: 30px">
                <strong>Zapłacono:</strong> {{ invoice.gross_price }} {{ currency }}
            </td>
        </tr>
    </table>
</div>
</body>
</html>
