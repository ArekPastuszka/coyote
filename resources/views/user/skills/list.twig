<div class="list-group-item" data-id="{{ item.id }}">
    <i class="fa fa-arrows"></i>
    <strong>{{ item.name }}</strong>

    <a href="{{ route('user.skills.delete', [item.id]) }}" class="btn-delete pull-right text-danger" data-id="{{ item.id }}">
        <i class="fa fa-remove" title="UsuÅ„"></i>
    </a>

    <span class="pull-right" style="margin-right: 10px">
        {% for i in 1..6 %}
            <span class="rate {{ i <= item.rate ? 'marked' }}"></span>
        {% endfor %}
    </span>
</div>