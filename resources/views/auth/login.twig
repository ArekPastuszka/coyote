{% extends 'layout.twig' %}
{% block title %}Logowanie{{ parent() }}{% endblock %}

{% import 'components/forms.twig' as forms %}

{% block container %}
    <div class="row" style="margin-top: 25px">
        <div class="col-xs-10 col-xs-offset-1">
            <div id="box-login" class="col-sm-5">
                <h1>Logowanie do systemu</h1>

                {% include 'auth/oauth.twig' %}

                {{ form_open({'method': 'POST', 'role': 'form', 'url': route('login')}) }}
                    {{ forms.inline(form_text('name', input_old('name'), {'class': 'form-control', 'autofocus': 'autofucs'}), 'Nazwa użytkownika', errors.first('name')) }}
                    {{ forms.inline(form_password('password', {'class': 'form-control'}), 'Hasło', errors.first('password')) }}

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" style="margin-right: 15px;" data-submit-state="Logowanie...">
                            Logowanie
                        </button>

                        <a href="{{ url('Password') }}">Zapomniałeś hasła?</a>
                    </div>
                {{ form_close() }}
            </div>

            <div id="box-login-sidebar" class="col-sm-5 col-sm-offset-2 hidden-xs">
                <div>
                    <h2>Nie masz konta?</h2>

                    <blockquote>Rejestracja zajmuje tylko kilka sekund i jest darmowa. Pozwoli Ci to aktywnie korzystać z naszego serwisu</blockquote>
                    <a class="btn btn-default" href="{{ route('register') }}"><i class="fa fa-sign-in"></i> Utwórz konto za darmo</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block head %}
    {{ parent() }}

    <link rel="stylesheet" href="/css/auth.css">
{% endblock %}

{% block body %}
    {{ parent() }}

    <script type="text/javascript">
        $(function() {
            $('.btn-github, .btn-google, .btn-fb').click(function() {
                window.location.href = $(this).data('url');
            });
        });
    </script>
{% endblock %}