{% extends 'emails.layout' %}

{% block container %}
    <h1 class="greeting">Dzień dobry</h1>

    <p class="paragraph">Informujemy o nowej kandydaturze na stanowisko <b>{{ link_to_route('job.offer', job.title, [job.id, job.slug]) }}</b>.</p>

    <hr>
        {{ text|raw }}
    <hr>

    <table  align="center" width="100%" cellpadding="0" cellspacing="0">
        <tr>
            <td style="padding: 5px 0">
                Imię i nazwisko:
            </td>

            <td style="padding: 5px 0">
                <b>{{ name }}</b>
            </td>
        </tr>

        <tr>
            <td style="padding: 5px 0">
                E-mail:
            </td>

            <td style="padding: 5px 0">
                <b>{{ link_to('mailto:' ~ email, email) }}</b>
            </td>
        </tr>

        <tr>
            <td style="padding: 5px 0">
                Numer telefonu:
            </td>

            <td style="padding: 5px 0">
                <b>{{ phone|default('--') }}</b>
            </td>
        </tr>

        <tr>
            <td style="padding: 5px 0">
                Minimalne oczekiwane wynagrodzenie:
            </td>

            <td style="padding: 5px 0">
                <b>{{ salary|default('--') }}</b>
            </td>
        </tr>

        <tr>
            <td style="padding: 5px 0">
                Obecny okres wypowiedzenia:
            </td>

            <td style="padding: 5px 0">
                <b>{{ dismissal_period|default('--') }}</b>
            </td>
        </tr>

        <tr>
            <td style="padding: 5px 0">
                Link do konta Github:
            </td>

            <td style="padding: 5px 0">
                <b>{{ github ? link_to(github) : '--' }}</b>
            </td>
        </tr>
    </table>
{% endblock %}

{% block footnote %}
{% endblock %}
