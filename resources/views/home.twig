{% extends 'layout.twig' %}
{% block title %}Strona główna{{ parent() }}{% endblock %}

{% import 'components/forms.twig' as forms %}
{% import 'components/modals.twig' as modal %}

{% block container %}
    <div class="row" style="margin-top: 20px">
        <main class="col-md-8">
            <section id="box-forum" class="box">
                <h4><i class="fa fa-star fa-fw"></i> Co nowego na forum?</h4>

                <div class="panel panel-forum">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <ul id="forum-tabs" class="nav nav-pills">
                                    <li role="presentation" {{ settings['homepage.mode'] == 0 ? 'class="active"' }}><a title="Zobacz najciekawsze wątki na forum" href="#interesting" role="tab" data-toggle="tab">Najciekawsze</a></li>
                                    <li role="presentation" {{ settings['homepage.mode'] == 1 ? 'class="active"' }}><a title="Zobacz najwyżej oceniane wątki w ostatnim miesiącu" href="#rated" role="tab" data-toggle="tab">Najwyżej oceniane</a></li>
                                    <li role="presentation" {{ settings['homepage.mode'] == 2 ? 'class="active"' }}><a title="Lista najnowszych wątków na forum" href="#newest" role="tab" data-toggle="tab">Nowe wątki</a></li>
                                </ul>

                                <div id="box-forum-headline">
                                    <div class="tab-content">
                                        <div role="tabpanel" class="tab-pane {{ settings['homepage.mode'] == 0 ? 'active' }}" id="interesting">
                                            {% for topic in interesting %}
                                                <div class="row">
                                                    <span class="col-sm-2 hidden-xs">
                                                        <strong>{{ topic.views }}</strong>
                                                        <small>{{ declination(topic.views, ['wyświetlenie', 'wyświetlenia', 'wyświetleń'], true) }}</small>
                                                    </span>
                                                    <div class="col-sm-10 col-xs-12">
                                                        <a title="[{{ topic.last_post_created_at|format_date }}] {{ topic.subject }}" href="{{ route('forum.topic', [topic.forum_slug, topic.id, topic.slug]) }}?view=unread" class="title" data-category="homepage-forum-headline" data-action="newest">{{ topic.subject }}</a>
                                                        <a href="{{ route('forum.category', [topic.forum_slug]) }}" class="category">{{ topic.name }}</a>
                                                        <small class="pull-right">{{ topic.last_post_created_at|format_date }}</small>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>

                                        <div role="tabpanel" class="tab-pane {{ settings['homepage.mode'] == 1 ? 'active' }}" id="rated">
                                            {% for topic in voted %}
                                                <div class="row">
                                                    <span class="col-sm-2 hidden-xs">
                                                        <strong>{{ topic.score }}</strong>
                                                        <small>{{ declination(topic.score, ['ocena', 'oceny', 'ocen'], true) }}</small>
                                                    </span>
                                                    <div class="col-sm-10 col-xs-12">
                                                        <a title="[{{ topic.last_post_created_at|format_date }}] {{ topic.subject }}" href="{{ route('forum.topic', [topic.forum_slug, topic.id, topic.slug]) }}?view=unread" class="title" data-category="homepage-forum-headline" data-action="newest">{{ topic.subject }}</a>
                                                        <a href="{{ route('forum.category', [topic.forum_slug]) }}" class="category">{{ topic.name }}</a>
                                                        <small class="pull-right">{{ topic.last_post_created_at|format_date }}</small>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>

                                        <div role="tabpanel" class="tab-pane {{ settings['homepage.mode'] == 2 ? 'active' }}" id="newest">
                                            {% for topic in newest %}
                                                <div class="row">
                                                    <span class="col-sm-2 hidden-xs">
                                                        <strong>{{ topic.views }}</strong>
                                                        <small>{{ declination(topic.views, ['wyświetlenie', 'wyświetlenia', 'wyświetleń'], true) }}</small>
                                                    </span>
                                                    <div class="col-sm-10 col-xs-12">
                                                        <a title="[{{ topic.last_post_created_at|format_date }}] {{ topic.subject }}" href="{{ route('forum.topic', [topic.forum_slug, topic.id, topic.slug]) }}?view=unread" class="title" data-category="homepage-forum-headline" data-action="newest">{{ topic.subject }}</a>
                                                        <a href="{{ route('forum.category', [topic.forum_slug]) }}" class="category">{{ topic.name }}</a>
                                                        <small class="pull-right">{{ topic.last_post_created_at|format_date }}</small>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div id="stream-wrapper" class="col-lg-6">
                                <div id="stream">
                                    <div class="overview">
                                        {% for activity in activities %}
                                            <div class="media">
                                                <span class="{{ activity.object.objectType }} hidden-xs" title="{{ activity.headline|striptags }}"></span>

                                                <div class="media-left hidden-xs">
                                                    <a href="{{ activity.actor.url }}">
                                                        <img class="media-object" src="{{ user_photo(activity.actor.image) }}" style="width: 38px; height: 38px;" alt="">
                                                    </a>
                                                </div>
                                                <div class="media-body">
                                                    <p>{{ activity.headline|raw }}</p>
                                                    <small>{{ activity.created_at|format_date }}</small>

                                                    <strong>{{ activity.excerpt|raw }}</strong>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </section>

            <section id="microblog" class="box">
                <h4><i class="fa fa-comments-o fa-fw"></i> <a href="{{ route('microblog.home') }}">Popularne wpisy na mikroblogu</a></h4>

                {% for microblog in microblogs %}
                    {% include "microblog/microblog.twig" %}
                {% endfor %}
            </section>
        </main>

        <aside class="col-md-4">

            {{ render_block('job_ads') }}

            <section id="box-reputation" class="box">
                <h4><i class="fa fa-star fa-fw"></i> Reputacja użytkowników</h4>

                <ul id="reputation-tabs" class="nav nav-panel">
                    <li role="presentation" {{ settings['homepage.reputation'] == 0 ? 'class="active"' }}><a href="#month" role="tab" data-toggle="tab">W tym miesiącu</a></li>
                    <li role="presentation" {{ settings['homepage.reputation'] == 1 ? 'class="active"' }}><a href="#year" role="tab" data-toggle="tab">W tym roku</a></li>
                    <li role="presentation" {{ settings['homepage.reputation'] == 2 ? 'class="active"' }}><a href="#total" role="tab" data-toggle="tab">Ogólnie</a></li>
                </ul>

                <div class="panel panel-default tab-content">
                    {% for key, mode in reputation %}
                        <div id="{{ key }}" role="tabpanel" class="panel-body tab-pane {{ settings['homepage.reputation'] == loop.index0 ? 'active' }}">
                            {% for item in mode %}
                                <div class="media">
                                    <div class="media-left">
                                        <a href="{{ route('profile', [item.id]) }}">
                                            <img class="media-object" src="{{ user_photo(item.photo) }}" style="width: 40px; height: 40px;" alt="{{ item.name }}">
                                        </a>
                                    </div>
                                    <div class="media-body">
                                        <h4 class="media-heading"><a data-user-id="{{ item.id }}" href="{{ route('profile', [item.id]) }}">{{ item.name }}</a></h4>

                                        <div class="progress">
                                            <div class="progress-bar" role="progressbar" aria-valuenow="{{ item.percentage }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ item.percentage }}%;">

                                            </div>

                                            <span class="rep"><strong>{{ item.reputation|number_format(0, '', ' ') }}</strong> <small>punktów</small></span>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endfor %}
                </div>
            </section>

            <section id="box-patronage" class="box">
                <div class="panel panel-patronage">
                    <h3><a title="4programmers.net patronuje wydarzeniom ze świata IT!" href="http://4programmers.net/Patronat" data-category="Patronage" data-value="Logo">Patronujemy</a></h3>

                    <div class="panel-body">
                        <h4><a href="http://4programmers.net/Patronat/Bezpłatne_Targi_Kariera_IT_w_Katowicach">Bezpłatne Targi Kariera IT w Katowicach</a></h4>

                        <h6>12 września 2015, Katowice</h6>
                        <div class="patronage-content">
                            <!--							<a href="--><!--?//= url('Patronat'); ?--><!--"><img src="--><!--?//= Url::site(); ?--><!--template/img/apple-touch.png" width="65" /></a>-->
                            <a href="http://4programmers.net/Patronat/Bezpłatne_Targi_Kariera_IT_w_Katowicach">12 września w Katowicach w Hotelu Qubus Prestige odbędzie się kolejna edycja bezpłatnych targów Kariera IT. Wydarzenie jest skierowane do specjalistów IT oraz studentów ostatnich lat kierunków informatycznych. Dla uczestników targów przygotowane są liczne atrakcje: prelekcje merytoryczne, prezentacje ofert pracy, pokazy nowinek technologicznych i konkursy z nagrodami.</a>
                        </div>

                        <div class="patronage-footer">
                            <a title="4programmers.net patronuje wydarzeniom ze świata IT!" href="http://4programmers.net/Patronat">
                                <i class="fa fa-arrow-right fa-fw"></i> Zainteresowany patronatem? Dowiedz się więcej
                            </a>
                        </div>
                    </div>
                </div>
            </section>

            <section id="box-whats-new" class="box">

                <div class="panel panel-news">
                    <div class="panel-body">
                        <h5><a title="Zobacz zmiany w serwisie 4programmers.net" href="http://4programmers.net/Blog">Nowości w serwisie</a></h5>

                        <ul>
                            <li>
                                <small class="hidden-xs">11 maj 2015</small>

                                <a href="http://4programmers.net/Blog/Grupowanie_powiadomień_z_mikrobloga">Grupowanie powiadomień z mikrobloga</a>
                            </li>
                            <li>
                                <small class="hidden-xs">30 lis 2014</small>

                                <a href="http://4programmers.net/Blog/Wyświetlanie_kwoty_na_rękę_w_przypadku_kontraktu">Wyświetlanie kwoty na rękę w przypadku kontraktu</a>
                            </li>
                            <li>
                                <small class="hidden-xs">07 lis 2014</small>

                                <a href="http://4programmers.net/Blog/Kosmetyczne_zmiany_w_module_Praca">Kosmetyczne (?) zmiany w module Praca</a>
                            </li>
                            <li>
                                <small class="hidden-xs">13 paź 2014</small>

                                <a href="http://4programmers.net/Blog/Grupowanie_powiadomień_tego_samego_typu">Grupowanie powiadomień tego samego typu</a>
                            </li>
                            <li>
                                <small class="hidden-xs">23 kwi 2014</small>

                                <a href="http://4programmers.net/Blog/Co_nowego_na_forum_w_nieco_odmienionej_formie">"Co nowego na forum" w nieco odmienionej formie</a>
                            </li>
                        </ul>
                    </div>
                </div>

            </section>

            {{ viewers|raw }}
        </aside>
    </div>

    {{ modal.alert('Nie można dodać załącznika. Być może plik ma nieprawidłowy format lub jest zbyt duży?') }}
    {{ modal.confirm('Czy na pewno usunąć ten wpis?') }}
{% endblock %}

{% block head %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ cdn('css/homepage.css') }}">

    <script type="text/javascript">
        var uploadUrl = '{{ route('microblog.upload') }}';
    </script>
{% endblock %}

{% block body %}
    {{ parent() }}

    <script type="text/javascript" src="{{ cdn('js/tab.js') }}"></script>
    <script type="text/javascript" src="{{ cdn('js/modal.js') }}"></script>
    <script type="text/javascript" src="{{ cdn('js/perfect-scrollbar.js') }}"></script>
    <script type="text/javascript" src="{{ cdn('js/posting.js') }}"></script>
    <script type="text/javascript" src="{{ cdn('js/microblog.js') }}"></script>
    <script type="text/javascript">
        $(function () {
            $('.btn-thumbs').tooltip({html: true});
            $('#stream').perfectScrollbar();

            $('#forum-tabs a').click(function() {
                var index = $('#forum-tabs a').index(this);
                $.post('{{ route('user.settings.ajax') }}', {'homepage_mode': index});
            });

            $('#reputation-tabs a').click(function() {
                var index = $('#reputation-tabs a').index(this);
                $.post('{{ route('user.settings.ajax') }}', {'homepage_reputation': index});
            });
        });
    </script>
{% endblock %}