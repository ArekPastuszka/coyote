<div id="box-posts" class="box">

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-xs-6">
                    <canvas id="pie-chart"></canvas>
                </div>

                <div class="col-xs-6">

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    {% if user.posts > 0 %}
        new Chart(document.getElementById("pie-chart"), {
            type: 'pie',
            data: {
                labels: [
                    {% for name, count in pie %}
                    '{{ name }}',
                    {% endfor %}
                ],
                datasets: [{
                    label: 'Reputacja z ostatnich 12 miesiÄ™cy',
                    data: [
                        {% for name, count in pie %}
                        {{ count }},
                        {% endfor %}
                    ],
                    backgroundColor: [
                        'rgba(255, 159, 64, 0.7)',
                        'rgba(128, 164, 26, 0.7)',
                        'rgba(91, 192, 222, 0.7)',
                        'rgba(217, 141, 13, 0.7)',
                        'rgba(92, 184, 92, 0.7)',
                        'rgba(217, 83, 79, 0.7)',
                        'rgba(100, 100, 102, 0.7)',
                        'rgba(255, 159, 64, 0.2)',
                        'rgba(128, 164, 26, 0.2)',
                        'rgba(91, 192, 222, 0.2)'
                    ]
                }]
            },
            options: {
                responsive: true,
            }
        });
    {% endif %}
</script>
