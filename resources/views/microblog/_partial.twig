<article id="entry-{{ id }}" class="microblog">
    <div class="panel panel-default panel-microblog">
        <div class="panel-body">
            <div class="media">
                <div class="media-left" style="padding-right: 15px">
                    <a href="{{ route('profile', [user_id]) }}">
                        <img class="media-object img-thumbnail" src="{{ user_photo(photo) }}" style="width: 50px; height: 50px;" alt="">
                    </a>
                </div>
                <div class="media-body">
                    <div class="dropdown pull-right">
                        <button class="btn btn-default btn-xs dropdown-toggle" type="button" id="microblog-menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="caret"></span>
                        </button>

                        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="microblog-menu">
                            <li><a href="#"><i class="fa fa-edit fa-fw"></i> Edytuj</a></li>
                            <li><a href="#"><i class="fa fa-remove fa-fw"></i> Usuń</a></li>
                        </ul>
                    </div>

                    <h5 class="media-heading">{{ link_to_profile(user_id, name, is_active, is_blocked) }}</h5>
                    <a href="{{ route('microblog.view', [id]) }}#entry-{{ id }}" class="timestamp" data-timestamp="{{ created_at|timestamp }}">{{ created_at|format_date }}</a>

                    <div class="microblog-text">
                        {{ text }}
                    </div>

                    <div class="microblog-footer">
                        <a href="javascript:" class="btn btn-thumbs {{ thumbs_on ? 'thumbs-on' }}" data-id="{{ id }}" data-count="{{ votes }}" data-toggle="tooltip" data-placement="top">
                            {{ declination(votes, ['głos', 'głosy', 'głosów']) }}
                        </a>
                        <a href="javascript:" class="btn btn-watch {{ watch_on ? 'watch-on' }}" data-id="{{ id }}">Obserwuj</a>
                        <a href="javascript:" class="btn btn-reply">Komentarz</a>
                    </div>

                    <div class="microblog-comments">

                        {% for comment in comments %}
                        <div id="#comment-{{ comment.id }}" class="media">
                            <div class="media-left">
                                <a href="#">
                                    <img class="media-object" src="{{ user_photo(comment.photo) }}" style="width: 32px; height: 32px">
                                </a>
                            </div>
                            <div class="media-body">
                                <h6>{{ link_to_profile(comment.user_id, comment.name, comment.is_active, comment.is_blocked) }}</h6>
                                <div class="media-content">{{ comment.text }}</div>

                                <div class="dropdown pull-right">
                                    <button class="btn btn-default btn-xs dropdown-toggle" type="button" id="comment-menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <span class="caret"></span>
                                    </button>

                                    <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="comment-menu">
                                        <li><a href="#"><i class="fa fa-edit fa-fw"></i> Edytuj</a></li>
                                        <li><a href="#"><i class="fa fa-remove fa-fw"></i> Usuń</a></li>
                                    </ul>
                                </div>

                                <ul class="list-inline">
                                    <li>
                                        <a href="{{ route('microblog.view', [id]) }}#comment-{{ comment.id }}" class="timestamp" data-timestamp="{{ comment.created_at|timestamp }}">{{ comment.created_at|format_date }}</a>
                                    </li>
                                    <li>
                                        <a href="javascript:" class="btn-sm-thumbs" data-id="{{ comment.id }}" data-count="{{ comment.votes }}" data-toggle="tooltip" data-placement="top">
                                            {{ declination(comment.votes, ['głos', 'głosy', 'głosów']) }}
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        {% endfor %}

                        <div class="media form">
                            <div class="media-left">
                                <a href="{{ route('profile', user('id')) }}">
                                    <img class="media-object" src="{{ user_photo(user('photo')) }}" style="width: 32px; height: 32px">
                                </a>
                            </div>
                            <div class="media-body">
                                <form>
                                    <input type="text" placeholder="Napisz komentarz..." class="form-control">
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</article>