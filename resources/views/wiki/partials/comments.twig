<div class="clearfix"></div>

<div id="box-comment">
    <h4>{{ declination(wiki.comments|length, ['komentarz', 'komentarzy', 'komentarzy']) }}</h4>

    <div class="row">
        <div class="col-sm-1 hidden-xs">
            <a href="{{ route('profile', [user('id')]) }}">
                <img src="{{ user_photo(user('photo')) }}" class="img-thumbnail">
            </a>
        </div>
        <div class="col-sm-11">
            <div class="panel panel-transparent">
                <div class="panel-body comment">
                    {{ form_start(form) }}

                    <div class="form-group">
                        {{ form_widget(form.text) }}

                        <div class="alert alert-warning alert-popover top hidden-xs" data-id="markdown">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close" title="Kliknij, aby zamknąć"><span aria-hidden="true">&times;</span></button>
                            Tylko podstawowe znaczniki <a href="https://daringfireball.net/projects/markdown/">markdown</a> są obsługiwane.
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.submit) }}
                        <div class="clearfix"></div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    {% for comment in wiki.comments %}
        {% include 'wiki.partials.comment' %}
    {% endfor %}
</div>