{% extends 'wiki.page' %}

{% block container %}
    <div class="panel panel-default">
        <div class="panel-body">
            <article>
                {% if can('wiki-admin') %}
                    <div class="dropdown pull-right">
                        <button class="btn btn-default btn-xs dropdown-toggle" type="button" id="comment-menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="caret"></span>
                        </button>

                        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="comment-menu">
                            <li role="presentation">
                                <a href="{{ route('wiki.submit', [wiki.id]) }}" title="Kliknij, aby edytować tę stronę"><i class="fa fa-edit fa-fw"></i> Edycja</a>
                            </li>

                            {% include 'wiki.partials.admin' %}
                        </ul>
                    </div>
                {% endif %}

                <header>
                    <h1>{{ wiki.title }}</h1>
                </header>

                {{ wiki.text|raw }}
            </article>
        </div>
    </div>
{% endblock %}

{% block head %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ cdn('css/help.css') }}">
{% endblock %}