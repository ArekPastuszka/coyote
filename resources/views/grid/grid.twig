<div class="panel panel-default">
    <div class="panel-body">

        {{ pagination|raw }}

        <form method="get" id="filter-form">
            <table class="table table-striped">
                <thead>
                    <tr>
                        {% for column in columns %}
                            {{ grid_column(column) }}
                        {% endfor %}
                    </tr>
                    <tr>
                        {% for column in columns %}
                            {{ grid_filter(column) }}
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                    {% for row in rows %}
                        <tr>
                            {% for cell in row %}
                                {{ grid_cell(cell) }}
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <input type="submit" style="visibility: hidden;" />
        </form>

        {{ pagination|raw }}
    </div>
</div>
