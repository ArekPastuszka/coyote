<div class="grid">

    {{ pagination|raw }}

    <form method="get" id="filter-form">
        <table class="table table-striped">
            <thead>
                <tr>
                    {% for column in columns %}
                        {{ grid_column(column) }}
                    {% endfor %}
                </tr>
                {% if has_filters %}
                    <tr>
                        {% for column in columns %}
                            {{ grid_filter(column) }}
                        {% endfor %}
                    </tr>
                {% endif %}
            </thead>
            <tbody>
                {% for row in rows %}
                    {{ grid_row(row) }}
                {% else %}
                    <tr>
                        {{ grid_no_data(grid) }}
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <input type="submit" style="visibility: hidden;" />
    </form>

    {{ pagination|raw }}
</div>
