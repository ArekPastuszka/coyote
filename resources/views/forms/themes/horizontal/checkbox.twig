{% extends 'forms.themes.horizontal.row' %}
{% set form_group_offset = form_group_offset|default('col-md-offset-4') %}
{% set form_group_class = form_group_class|default('col-md-6') %}

{% block label %}{% endblock %}
{% block wrap %}
    <div class="{{ form_group_class }} {{ form_group_offset }}">
        {% if not ('[]' in name) %}
            {{ form_hidden(name, 0) }}
        {% endif %}

        <div class="checkbox">
            {{ include(widget_path) }}

            <label for="{{ attr.id }}">
                {{ label }}
            </label>
        </div>
    </div>
{% endblock %}