{% extends 'forms.themes.horizontal.row' %}
{% set form_group_offset = 'col-md-offset-4' %}
{% set form_group_class = 'col-md-6' %}

{% block label %}{% endblock %}
{% block wrap %}
    <div class="{{ form_group_class }} {{ form_group_offset }}">
        {% if not ('[]' in name) %}
            {{ form_hidden(name, 0) }}
        {% endif %}

        <div class="checkbox">
            {% include 'forms.themes.horizontal.checkbox_widget' %}

            <label for="{{ attr.id }}">
                {{ label }}
            </label>
        </div>
    </div>
{% endblock %}