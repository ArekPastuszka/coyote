{% extends 'forms.themes.horizontal.row' %}
{% import 'components.forms' as forms %}
{% set form_group_class = 'col-md-6' %}

{% block wrap %}
    <div class="{{ form_group_class }}">
        {{ form_file(name, {'style': 'visibility: hidden; height: 1px'}) }}
        {{ form_text(name ~ '_placeholder', value, {'class': 'form-control', 'readonly': 'readonly'}|merge(attr)) }}
    </div>
{% endblock %}