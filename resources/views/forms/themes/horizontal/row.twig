{% import 'components.forms' as forms %}
{% set form_group_class = 'col-md-6' %}

<div {{ forms.attr(row_attr|merge({class: (row_attr.class|default('') ~ ' form-group ' ~ (error ? ' has-error'))|trim})) }}>
    {% block label %}{% include 'forms.themes.horizontal.label' %}{% endblock %}

    {% block wrap %}
        <div class="{{ form_group_class }}">
            {% block widget %}{{ include('forms.themes.horizontal.' ~ type ~ '_widget') }}{% endblock widget %}

            {% block error %}
                {% include 'forms.themes.horizontal.error' %}
            {% endblock %}
        </div>
    {% endblock %}
</div>