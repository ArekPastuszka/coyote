{% import 'components.forms' as forms %}

<div {{ forms.attr(row_attr|merge({class: (row_attr.class|default('') ~ ' btn-group ' ~ (error ? ' has-error'))|trim})) }}>
    <button class="btn dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        {{ value ? (value is iterable ? value|join(', ') : value) : label }}

        <span class="caret"></span>
    </button>

    <div class="dropdown-menu padding-sm">
        {{ include(widget_path) }}
        {{ include('forms.themes.inline.error') }}
    </div>
</div>
